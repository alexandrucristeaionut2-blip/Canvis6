generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

// --- Auth (NextAuth.js / Auth.js) ---

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  passwordHash  String?
  createdAt     DateTime  @default(now())

  accounts      Account[]
  sessions      Session[]
  addresses     Address[]
  orders        Order[]
}

model Account {
  id                String   @id @default(cuid())
  userId            String
  user              User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?
  createdAt         DateTime @default(now())

  @@unique([provider, providerAccountId])
  @@index([userId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  expires      DateTime
  createdAt    DateTime @default(now())

  @@index([userId])
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Address {
  id         String   @id @default(cuid())
  userId     String
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  fullName   String
  phone      String
  line1      String
  line2      String?
  city       String
  region     String?
  postalCode String
  country    String
  isDefault  Boolean  @default(false)
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  @@index([userId])
}

model Theme {
  id          String   @id @default(cuid())
  slug        String   @unique
  name        String
  description String
  tags        String
  heroImage   String?
  mockupImage String   @default("/placeholders/gallery.svg")
  createdAt   DateTime @default(now())

  items       OrderItem[]
  gallery     GalleryItem[]
}

model FrameOption {
  id          String   @id @default(cuid())
  color       String
  model       String
  displayName String
  createdAt   DateTime @default(now())

  @@unique([color, model])
}

model Order {
  id              String    @id @default(cuid())
  publicId         String    @unique
  status          String
  userId          String?
  user            User?     @relation(fields: [userId], references: [id], onDelete: SetNull)
  email           String?
  name            String?
  phone           String?
  country         String?
  addressLine1    String?
  addressLine2    String?
  city            String?
  postalCode      String?
  state           String?
  currencyDisplay String    @default("RON")
  subtotal        Int       @default(0)
  shipping        Int       @default(0)
  total           Int       @default(0)
  revisionUsed    Boolean   @default(false)
  revisionNotes   String?
  trackingNumber  String?
  createdAt       DateTime  @default(now())
  updatedAt       DateTime  @updatedAt

  items           OrderItem[]
  uploads         Upload[]
  events          EventLog[]

  @@index([userId])
}

model OrderItem {
  id                 String     @id @default(cuid())
  publicItemId        String?    @unique
  orderId            String
  order              Order      @relation(fields: [orderId], references: [id], onDelete: Cascade)
  size               String
  basePrice          Int
  themeId            String
  theme              Theme      @relation(fields: [themeId], references: [id])
  frameColor         String
  frameModel         String
  paperFinish        String     @default("glossy")
  quantity           Int        @default(1)
  status             String     @default("DRAFT")
  revisionUsed       Boolean    @default(false)
  revisionNotes      String?
  approvedAt         DateTime?
  previewReadyAt     DateTime?
  productionStartedAt DateTime?
  shippedAt          DateTime?
  trackingNumber     String?
  createdAt          DateTime   @default(now())

  uploads            Upload[]

  @@index([orderId])
  @@index([publicItemId])
  @@index([themeId])
}

model Upload {
  id           String     @id @default(cuid())
  orderId      String?
  order        Order?     @relation(fields: [orderId], references: [id], onDelete: Cascade)
  orderItemId  String?
  orderItem    OrderItem? @relation(fields: [orderItemId], references: [id], onDelete: Cascade)
  type         String

  // Where this upload is stored (legacy LOCAL/S3, or CLOUDINARY for the new preview-payment flow).
  provider     String?
  // Cloudinary-only metadata
  kind         String?
  width        Int?
  height       Int?
  format       String?
  folder       String?
  tags         String?
  context      String?

  key          String?
  filePath     String
  originalName String
  mimeType     String?
  size         Int?
  createdAt    DateTime   @default(now())

  @@index([orderId])
  @@index([orderItemId])
}

model EventLog {
  id        String   @id @default(cuid())
  orderId   String?
  order     Order?   @relation(fields: [orderId], references: [id], onDelete: Cascade)
  type      String
  message   String
  createdAt DateTime @default(now())

  @@index([orderId])
}

model GalleryItem {
  id          String   @id @default(cuid())
  themeId     String
  theme       Theme    @relation(fields: [themeId], references: [id], onDelete: Cascade)
  size        String
  frameColor  String
  frameModel  String
  imagePath   String
  mockupImage String   @default("/placeholders/gallery.svg")
  title       String?
  createdAt   DateTime @default(now())

  @@index([themeId])
}
